*,
*:before, 
*:after
	box-sizing border-box
	font-family inherit
	outline none

html
	position relative
	
	width 100%
	height 100%
	min-height 100%
	
	font-size 10px

body
	width 100%
	height 100%
	min-height 100%
	padding 0
	
	fontFamily($font-default-regular)
	font-size $font-lg
	line-height 1.57
	font-weight 400
	
	color $color-text-default
	
	overflow-y auto
	
	-webkit-overflow-scrolling touch

img
	max-width 100%
	height auto

h1, 
h2, 
h3,
h4,
h5,
h6,
b,
strong
	 fontFamily($font-regular)
	 font-weight 400
	 color $color-titles-default

h1
	font-size $font-xxl
	line-height 1.27

i,
em
	 fontFamily($font-default-regular-italic)
	 font-weight 400
