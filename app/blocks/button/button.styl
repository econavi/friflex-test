$transition-button-hover = $transition-default
$color-button = $color-brand

.button
	display inline-block
	vertical-align top
	width auto
	padding 9px 42px 12px
	
	font inherit
	font-weight bold

	text-align center
	text-transform uppercase
	text-decoration none
	
	color $color-button
	border 2px solid $color-button
	border-radius 20px
	background none
	
	transition background $transition-button-hover
	
	user-select none
	cursor pointer

	&_disabled, &:disabled
		cursor default
		opacity 0.3
	
	&:hover
		border-color $color-button
		background none
		
	&:active
		background $color-button
		color #fff
	
	+media($screen-mid)
	
		&:hover
			color #fff
			border 2px solid $color-button
			background $color-button

		&:active
			background none
	
.button
	&_reverse-color,
	&_reverse-color:hover
		background $color-button
		color #fff
	
	&:active
		background none
		color $color-button
	
	+media($screen-mid)
		&:hover
			background none
			color $color-button
		
		&:active
			background $color-button
			color #fff

















