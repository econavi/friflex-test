.page-header
	position relative
	z-index $zindex-page-header
	
	padding-top 20px
	padding-bottom 10px
	
	+media($screen-xxl)
		padding-top 25px
		padding-bottom 20px
	
	&__in
		position relative
		display flex
		flex-wrap wrap
		justify-content flex-start
		
		+media($screen-mid)
			flex-wrap nowrap
			align-items center
			justify-content space-between

	&__switcher-menu
		z-index $zindex-switcher-menu
		display inline-block
		vertical-align middle
		
		+media($screen-mid)
			display none
			
	
	&__logo
		display inline-block
		vertical-align middle
		width 80px
		height auto
		margin-left 15%
		
		text-decoration none
		
		+media($screen-mid)
			flex-shrink 0
			width 149px
			margin-left 0
	
	&__user-profile
		position relative
		right -15px
		margin-left auto
		
		&_only-mobile
			top -5px
			+media($screen-mid)
				display none
	
	&__user-profile .user-profile__name
		display none
		
		+media($screen-sm)
			display inline-block
		
	&__nav
		position fixed
		top 0
		left 0
		z-index 100

		width 100%
		height 100vh
		// height 110%
		padding-top 40px
		padding-bottom 50vh
		
		overflow-y auto
		
		text-align center
		
		background $color-bg-popup-menu
		
		transform translateY(-100%)
		opacity 0
		transition transform $transition-default, opacity $transition-default
		
		+media($screen-mid)
			position static

			flex-grow 1
			width auto
			height auto
			padding 0
			
			overflow-y visible

			text-align left
			
			transform translateY(0)
			opacity 1
		
		&_is-showed
			transform translateY(0)
			opacity 1

.no-js .page-header
	&__nav
		position static
		transform translateY(0)
		opacity 1